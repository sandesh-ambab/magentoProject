<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="EMICalculator" translate="label" sortOrder="250">
            <label>EMICalculator</label>
        </tab>
        <section id="emi_calc_module_enable" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>EMI options</label>
            <tab>EMICalculator</tab>
            <resource>Ambab_EMImodule::emicalculator_config</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Emi Configuration</label>
                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
        <section id="emi_calc_bank_details" translate="label" sortOrder="150" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Add Bank</label>
            <tab>EMICalculator</tab>
            <resource>Ambab_EMImodule::emicalculator_config</resource>
            <group id="emi_bank_details" translate="label" type="text" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Bank details</label>
                <field id="bank_details" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Module Enable</label>
                    <!-- <source_model>Magento\Config\Model\Config\Source\Yesno</source_model> -->
                </field>
            </group>
        </section>
    </system>
</config>